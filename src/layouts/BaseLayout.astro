---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'UTM Computational Linguistics Society' } = Astro.props;
import '../styles/global.css';
import Logo from '../components/Logo.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground min-h-screen font-sans antialiased">
    <header class="sticky top-0 z-10 border-b border-border bg-background">
      <nav class="mx-auto flex max-w-6xl h-16 items-center justify-between gap-4 px-5" aria-label="Main">
        <Logo />
        <div class="flex items-center gap-6">
          <a href="/#activities" class="text-sm text-muted-foreground hover:text-foreground">/activities</a>
          <a href="/#events" class="text-sm text-muted-foreground hover:text-foreground">/events</a>
          <a href="/#media" class="text-sm text-muted-foreground hover:text-foreground">/media</a>
          <a href="/#team" class="text-sm text-muted-foreground hover:text-foreground">/team</a>
          <a href="/#media" class="rounded-lg bg-accent px-4 py-2 text-sm font-medium text-accent-foreground hover:opacity-90">Join Us</a>
        </div>
      </nav>
    </header>
    <slot />
  </body>
</html>
